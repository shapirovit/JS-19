<div id="map" style="width: 100%; height: 100vh"></div>

{{> './src/templates/map.hbs'}}

<style>
    ::-webkit-scrollbar { width: 5px; }
    ::-webkit-scrollbar-button {  height: 0px; }
    ::-webkit-scrollbar-track-piece { background-color: #ffffff;}
    ::-webkit-scrollbar-thumb { height: 50px; background-color: #666; border-radius: 3px;}

    .modalForm {
        display: none;
    }

    .modalActive {
        display: block;
        position: absolute;
    }

    #formFeedback {
        position: absolute;
        width: 379px;
        height: 527px;
        background-color: white;
        border-radius: 10px;
    }

    #headerAdress {
        display: block;
        background-color: #ff8563;
        border-radius: 10px 10px 0 0;
        color: white;
        min-height: 44px;
        font-size: 20px;
        line-height: 17px;
        position: relative;
    }

    img {
        position: absolute;
        width: 8px;
        height: 14px;
        top: 14px;
        padding-left: 15px;
    }

    #adressText {
        width: 90%;
        font-size: 12px;
        font-weight: 300;
        color: #fff;
        padding-left: 30px;
        position: absolute;
        top: 12px
    }

    .close {
        position: absolute;
        right: 26px;
        top: 20px;
    }

    .close::before {
        content: '';
        position: absolute;
        width: 14px;
        height: 4px;
        border-radius: 6px;
        background-color: #fff;
        transform: rotate(40deg);
    }

    .close::after {
        content: '';
        position: absolute;
        width: 14px;
        height: 4px;
        border-radius: 6px;
        background-color: #fff;
        transform: rotate(-40deg);
    }

    #historyFeedback {
        border-bottom: 1px solid rgba(0, 0, 0, .3);
        height: 138px;
        overflow-y: scroll;
        margin: 5px 5px 5px 15px ;
    }

    .historyFeedback__box {
        margin-bottom: 16px;
        color: rgba(79, 79, 79, .75);
    }

    .historyFeedback__box:last-child {
        margin-bottom: 0;
    }

    .historyFeedback__box strong {
        color: rgba(79, 79, 79, .75);
        font-weight: bold;
    }

    time {
        color: rgba(79, 79, 79, .75);
        font-size: 16px;
        font-weight: 400;
    }

    .historyFeedback__box span {
        display: block;
        color: rgb(79, 79, 79);
        font-size: 15px;
        margin-top: 10px;
    }

    #textBefore {
        color: #ff8563;
        font-weight: 500;
        text-transform: uppercase;
        margin-bottom: 25px;
        margin: 10px 5px 5px 15px ;
        padding-left: 10px;
    }

    #nameInput, #placeInput {
        background-color: #fff;
        border: 1px solid rgb(196, 196, 196);
        line-height: 34px;
        border-radius: 20px;
        margin-bottom: 20px;
        padding-left: 15px;
        margin: 5px 5px 5px 15px ;
        width: 80%;
        color: #282828;
        font-size: 15px;
        font-weight: 300;
    }

    #feedbackInput {
        background-color: #fff;
        border: 1px solid rgb(196, 196, 196);
        line-height: 34px;
        border-radius: 20px;
        padding-left: 15px;
        margin: 5px 5px 5px 15px ;
        width: 80%;
        color: #282828;
        font-size: 15px;
        font-weight: 300;
        min-height: 151px;
        min-width: 80%;
        max-width: 80%;
        max-height: 151px;
    }

    #addButton {

        width: 87px;
        height: 30px;
        background-color: #ff8563;
        border-radius: 10px;
        color: white;
        font-size: 12px;
        font-weight: 300;

        position: absolute;
        right: 5%;
        display: block;
    }

    ::placeholder {
        color: #9f9f9f;
        font-size: 15px;
        font-weight: 300;
    }
</style>